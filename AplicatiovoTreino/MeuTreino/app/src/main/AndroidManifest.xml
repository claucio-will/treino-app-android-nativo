<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.claucio.meutreino">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".model.FirebaseOffline"
        android:allowBackup="true"
        android:icon="@drawable/dumbbell_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dumbbell_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".novasActivity.PesoMedidasActivity"
            android:parentActivityName=".activity.TelaInicioActivity" />
        <activity
            android:name=".novasActivity.OutrosTreinosActivity"
            android:parentActivityName=".activity.TelaInicioActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".novasActivity.MinhaFichaActivity"
            android:parentActivityName=".activity.TelaInicioActivity" />
        <activity
            android:name=".novasActivity.NovoTreinoActivity"
            android:parentActivityName=".activity.TelaInicioActivity" />
        <activity
            android:name=".activity.TelaInicioActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.CadastroActivity"
            android:parentActivityName=".activity.LoginActivity"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".activity.LoginActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>